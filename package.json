{
  "name": "conscious-ai-learning-system",
  "version": "1.0.0",
  "description": "A virtual AI being that learns, thinks, feels, and creates from scratch - starting with zero knowledge and developing through curiosity-driven interaction with its environment.",
  "type": "module",
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:shared": "cd shared && npm run build",
    "install:all": "npm install && npm run install:shared && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:shared": "cd shared && npm install",
    "start": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend && npm run test:shared",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:shared": "cd shared && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:shared",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "clean": "npm run clean:backend && npm run clean:frontend && npm run clean:shared && rm -rf node_modules",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:shared": "cd shared && rm -rf node_modules dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Muhtasim-Baby/conscious-ai-learning-system.git"
  },
  "keywords": [
    "ai",
    "artificial-intelligence",
    "machine-learning",
    "consciousness",
    "neural-networks",
    "curiosity",
    "autonomous-learning",
    "tensorflow",
    "3d-visualization",
    "physics-simulation"
  ],
  "author": "Muhtasim-Baby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Muhtasim-Baby/conscious-ai-learning-system/issues"
  },
  "homepage": "https://github.com/Muhtasim-Baby/conscious-ai-learning-system#readme"
}